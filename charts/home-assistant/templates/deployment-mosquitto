apiVersion: apps/v1
kind: Deployment
metadata:
  name: mosquitto
  labels:
    {{- include "home-assistant.labels" . | nindent 4 }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: mosquitto
  template:
    metadata:
      labels:
        app: mosquitto
    spec:
      containers:
      - name: mosquitto
        image: amd64/eclipse-mosquitto:2.0.22
        volumeMounts:
        - name: mosquitto-config
          mountPath: /mosquitto/config/mosquitto.conf
          subPath: mosquitto.conf
        securityContext:
          privileged: true
        ports:
        - containerPort: 1883
        - containerPort: 1884
      volumes:
      - name: mosquitto-config
        configMap:
          name: mosquitto-config